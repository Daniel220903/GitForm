@model IEnumerable<FormClick.ViewModels.TemplateViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@using FormClick.Data
@inject AppDBContext dbContext
@inject IViewLocalizer Localizer

<h2 class="mb-4">@Localizer["Welcome"]</h2>
<h2 class="mb-4">Últimos Templates</h2>

<div class="container">
    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No se encontraron templates para mostrar.
        </div>
    }
    else
    {
        @foreach (var template in Model)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h5 class="card-title">@template.Title</h5>
                    <small class="text-muted">
                        Publicado por <strong>@template.UserName</strong> el @template.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
                        @if (template.IsOwner){
                            <span class="ms-2">
                                <i class="bi bi-person-fill-check text-success"></i>
                                <span class="text-success">Owner</span>
                            </span>
                        }

                    </small>
                </div>
                <div class="card-body">
                    <p class="card-text">@template.Description</p>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <a href="../api/Template/GetRespond/@template.TemplateId" class="btn btn-primary">Contestar</a>
                        @{
                            var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
                            var userIdClaim = claimsIdentity?.FindFirst("Id")?.Value;
                            int parsedClaim = int.TryParse(userIdClaim, out var idParsed) ? idParsed : 0;
                            bool isAdmin = false;

                            isAdmin = dbContext.Users.Any(u => u.Id == parsedClaim && u.Admin);
                        }
                        @if (template.IsOwner || isAdmin)
                        {
                            <a href="Template/GetRespond/@template.TemplateId" class="btn btn-secondary">Editar</a>
                        }
                        <div>
                            <span class="me-3">
                                <i class="bi bi-hand-thumbs-up"></i> 12 Likes
                            </span>
                            <span>
                                <i class="bi bi-chat-dots"></i> 5 Comments
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
